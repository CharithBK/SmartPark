<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/signinbackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="New Account"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginHorizontal="130dp"
            android:id="@+id/title_sign_up"
            android:layout_marginTop="35dp"
            android:layout_marginStart="250dp"
            android:text="Sign up"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_below="@+id/title"
            android:layout_marginTop="50dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="30dp"
            android:hint="Name"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:padding="15dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/name"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#B1B1B1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nic"
            android:layout_below="@+id/name"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="1dp"
            android:hint="NIC"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="text"
            android:textColorHint="@android:color/white"
            android:padding="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/nic"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#B1B1B1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_below="@+id/nic"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="1dp"
            android:hint="Email"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/white"
            android:padding="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/email"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#B1B1B1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_below="@+id/email"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="1dp"
            android:hint="Password"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:padding="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/password"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#B1B1B1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/conform_password"
            android:layout_below="@+id/password"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="1dp"
            android:hint="Conform Password"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:padding="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/conform_password"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#727070" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vehicle_number"
            android:layout_below="@+id/conform_password"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="1dp"
            android:hint="Vehicle Number"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="text"
            android:textColorHint="@android:color/white"
            android:padding="15dp"/>
        <RelativeLayout
            android:id="@+id/last"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/vehicle_number"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="#3A3838" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register"
            android:layout_marginHorizontal="300dp"
            android:layout_marginTop="610dp"
            android:backgroundTint="#A81D1D22"
            android:onClick="Locations"
            android:src="@drawable/round_arrow_forward_24"
            android:tint="@android:color/white"
            app:fabCustomSize="80dp"
             />


        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last"
            android:onClick="OpenSigninPage"
            android:padding="15dp"
            android:text="Sign in"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="13dp"/>


    </RelativeLayout>


